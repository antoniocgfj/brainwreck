<div id="fullpage">
    <div>
        <div id="main">
            <h1>Edit Concert</h1>
            <div class="tableContainer">
                <form action="/editShowDatabase" id="edit">
                    <label>Date:</label> <input type="datetime-local" name="date" id="date" value="{{results.calendar}}" required>
                    <br>
                    <label>Venue:</label> <select name="show" id="show">
                                                <option value = "{{results.venueId}}"> {{results.venue}} at {{results.city}}, {{results.state}} </option>
                                                {{#each venues}}
                                                    <option value="{{this.venueId}}">{{this.name}} at {{this.city}}, {{this.state}}</option>
                                                {{/each}}
                                                </select>
                    <br>
                    <input type="hidden" name="id" value={{results.id}}>
                    <input type="submit" name="Edit" value="Edit" id="editButton">
                    <br>
                </form>
            </div>
        </div>
    </div>
    <footer class="footer mt-auto py-3">
        <div class = "container">
